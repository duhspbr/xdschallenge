<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#181818">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Compra efetuada\n    com sucesso!"
        android:layout_above="@+id/img_sucesso"
        android:textStyle="bold"
        android:textColor="#D5D2D2"
        android:textSize="28dp"/>

    <ImageView
        android:id="@+id/img_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/img_sucesso"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="50dp"
        android:text="Voltar"
        android:textStyle="bold"
        android:background="@drawable/border_button_green"/>
</RelativeLayout>